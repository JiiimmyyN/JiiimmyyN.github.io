debug = false;
debug-border() 
	if debug 
		border: arguments;

boxshadow()
	-webkit-box-shadow: arguments; 
	-moz-box-shadow: arguments;
	box-shadow: arguments;

almost-white = #f5edd2;
bg = #202020;
projects-bg = #e3e3e;

body {
    background-color: bg;
    font-family: 'Roboto Condensed', sans-serif;
}

.left { 
    float: left;
    debug-border: 1px dotted white;
	color: almost-white;
}

.left p {
	font-style: bold;
	font-size: 25px;
	margin: 0px;
}

.left p span {
	font-size: 18px;
	margin: -20px 0px;

}

.right {
    debug-border: 1px solid white ;
    padding: 0px 0px 0px 10px;
    color: almost-white;
    overflow: auto;
}

.right h1 {
    font-weight: 700;
    margin: 5px 5px 20px;
}
.right p { 
    font-family: 'Roboto Condensed', sans-serif;
    font-size: 20px;
    margin: 5px 5px 40px;
}

.projects {
    debug-border: 1px dashed white ;
    margin: 0px 10px 10px 0;
	border: 1px solid black;
	background: projects-bg;
	boxshadow: 16px 15px 45px -22px rgba(0,0,0,0.75);
}

.projects-header h1 {
	debug-border: 1px dashed red ;
	margin: 5px 0px 5px 10px;
	color: projects-bg;
	font-size: 25px;
}

.projects-header {
	debug-border: 1px solid red ;
	border: 1px solid black;
}

.projects-body {
	debug-border: 1px dashed green ;
	border: 1px solid black;
	background-color: bg;
	color: projects-bg;
}

.project {
	debug-border: 1px dashed red ;
	margin: 20px 4px 10px;
	padding: 0px 5px 0px 5px
}

.project h1 {
	font-size: 25px;
}

.project h3 {
	font-size: 15px;
	font-style: italic;
    margin: -15px 5px 20px;
}

.project div {
	debug-border: 1px dashed white
}

.project div p {
	display: inline;
	padding: 0px 5px;
}